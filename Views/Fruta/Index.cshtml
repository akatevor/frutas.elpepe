@using System.ComponentModel.DataAnnotations.Schema
@model List<Tarea1.Models.Fruta>

<form class="form-inline" method="POST" action="/Fruta/Find">
    <div class="form-group mx-sm-3 mb-2">
        <label class="mr-3">Buscar Fruta</label>
        <input type="text" class="form-control" required name="nombre">
    </div>
    <button type="submit" class="btn btn-success mb-2">Buscar</button>
</form>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="card mb-3">
                    <img src="@item.Imagen" class="card-img-top" alt="@item.Nombre" style="height:200px; object-fit:cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Nombre</h5>
                        <p class="card-text">Color: @item.Color</p>
                        <p class="card-text">Sabor: @item.Sabor</p>
                        <p class="card-text"><small class="text-muted">Peso Promedio: @item.PesoPromedio</small></p>
                        <a href="@Url.Action("Details", "Fruta", new { id = item.Id })" class="btn btn-warning">Detalles</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
